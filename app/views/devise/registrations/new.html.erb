<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Request Rushour</h3>
    </div>
    <div class="modal-body">
      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'user@example.com' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Get Rushour", :class => "btn btn-primary", :id => 'invitation_button' %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>
<div class="greeting_content">
  <%= image_tag "Rushour_Logo_small_letters_only.png" %>
  <h2 class="test">Rushour is the best way to get where you're going.</h2>
</div>
<div id="call-to-action" class="landing_page_button">
  <a class="btn btn-primary btn-large" data-toggle="modal" href="#request-invite">Get Rushour</a>
</div>